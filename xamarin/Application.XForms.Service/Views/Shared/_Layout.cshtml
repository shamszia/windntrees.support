@using Microsoft.AspNetCore.Http;
@using Microsoft.AspNetCore.Hosting;
@using Microsoft.AspNetCore.Mvc;

@inject IHostingEnvironment ENV
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WindnTreesSEO</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <!-- NAVBAR HTML -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" role="navigation">
            <div class="container-fluid">
                <!-- MAIN NAVIGATION -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">NavigationMenu</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-nav" aria-controls="main-nav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @{
                    //string[] navigationRoles = null;
                    string[] navigationRoles = new string[] { "myaccount", "admin" };
                }

                @Html.Raw(WindnTrees.Controls.Standard.Bootstrap.Navbar.NavigationComposer.composeFromJson(new string[] {
                        ENV.ContentRootPath + "\\navigations\\navigation1.json",
                        ENV.ContentRootPath + "\\navigations\\navigation2.json"
                        },
                        User.Identity.Name, navigationRoles, null, null, "4.0"))
            </div>
        </nav>
        <!--NAVBAR HTML End -->
    </header>
    <div class="container">
        @Html.AntiForgeryToken()
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WindnTreesSEO - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/knockoutjs/3.5.0/Content/Scripts/knockout-3.5.0.js" type="text/javascript"></script>
    <script src="~/lib/knockout.validation/2.0.3/content/Scripts/knockout.validation.js" type="text/javascript"></script>
    <script src="~/lib/windntrees/windntrees-128.min.js" type="text/javascript"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
