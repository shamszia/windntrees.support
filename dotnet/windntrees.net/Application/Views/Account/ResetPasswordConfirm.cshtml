@model Application.Models.ResetPasswordConfirmModel
@{
    ViewBag.Title = "Reset Password";
}
@section Header
{
    <title>@LocaleResources.Views.Account.ResetPasswordConfirm.Page</title>
}

<div id="webpage" class="row align-items-center login">
    <div class="col-4 m-auto align-content-center">
@using (Html.BeginForm("ResetPasswordConfirm", "Account", FormMethod.Post))
{
    <div class="card">
        <div class="card-header">
            <h3>
                @LocaleResources.Views.Account.ResetPasswordConfirm.Title
            </h3>
        </div>
        <div class="card-body">
            @Html.AntiForgeryToken()

            @*@Html.AntiForgeryToken()*@

            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.Token)
            @Html.HiddenFor(m => m.UserId)

            <div class="form-group row">
                <div class="col-12">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-12", @placeholder = @LocaleResources.Views.Account.ResetPasswordConfirm.Password, @maxlength = "32" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-12", @placeholder = @LocaleResources.Views.Account.ResetPasswordConfirm.Confirm, @maxlength = "32" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="form-group row">
                <div class="col-12">
                    <button type="submit" class="btn btn-default">
                        @LocaleResources.Views.Account.ResetPasswordConfirm.Submit
                    </button>
                </div>
            </div>
        </div>
    </div>
}
    </div>
</div>