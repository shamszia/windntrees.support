@model Application.Models.ResetPasswordModel
@{
    ViewBag.Title = "Reset Password";
}
@section Header
{
    <title>@LocaleResources.Views.Account.ResetPassword.Page</title>
}

<div id="webpage" class="row align-items-center login">
    <div class="col-4 m-auto align-content-center">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post))
        {
            <div class="card">
                <div class="card-header">
                    <h3>
                        @LocaleResources.Views.Account.ResetPassword.Title
                    </h3>
                </div>
                <div class="card-body">
                    @Html.AntiForgeryToken()

                    @*@Html.AntiForgeryToken()*@
                    @Html.ValidationSummary(true)
                    <div class="form-row">
                        <div class="col-12">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-12", @placeholder = @LocaleResources.Views.Account.ResetPassword.Username, @maxlength = "32" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-12">
                            <p class="help-block">
                                @LocaleResources.Views.Account.ResetPassword.Message
                            </p>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-row">
                        <div class="col-12">
                            <button type="submit" class="btn btn-default">
                                @LocaleResources.Views.Account.ResetPassword.Submit
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>