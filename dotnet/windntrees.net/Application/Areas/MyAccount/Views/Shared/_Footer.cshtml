                        </ul>
                    </div>*@
                <!-- END COLUMN 3 -->
            </div>
        </div>
    </div>
    <!-- COPYRIGHT -->
    <div class="text-center copyright">
        <span>@System.Configuration.ConfigurationManager.AppSettings["CompanyTitle"]</span>
        <span>@SharedLibrary.Resources.Global.StandardMessages.AllRights</span>
    </div>
