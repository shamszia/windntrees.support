@section Scripts {
    <script src="~/Scripts/ViewModels/Product.js" type="text/javascript"></script>
    <script src="~/Scripts/ViewModels/ProductFeature.js" type="text/javascript"></script>
    <script src="~/Scripts/ViewModels/Reference.js" type="text/javascript"></script>
    <script src="~/Scripts/ViewModels/Advertisement.js" type="text/javascript"></script>
    <script src="~/Scripts/ViewModels/LicenseInfo.js" type="text/javascript"></script>

    <script type="text/javascript">

        var featureView = new CRUDView({
            'uri': '/admin/productfeature',
            'observer': new CRUDObserver({ 'contentType': new ProductFeature({}), 'messages': intialize(new MessageRepository()) })
        });

        featureView.getObserverObject().dispalyFeatureForm = function () {

            $("#__form_feature").dialog("open");
        };

        featureView.getObserverObject().setListSource(featureView);

        var referenceView = new CRUDView({
            'uri': '/admin/reference',
            'observer': new CRUDObserver({ 'contentType': new Reference({}), 'messages': intialize(new MessageRepository()) }),
            'progressEvent': true
        });

        referenceView.getObserverObject().dispalyReferenceForm = function () {

            $("#__form_reference").dialog("open");
        };

        referenceView.getObserverObject().setListSource(referenceView);

        var advertisementView = new CRUDView({
            'uri': '/admin/advertisement',
            'observer': new CRUDObserver({ 'contentType': new Advertisement({}), 'messages': intialize(new MessageRepository()) }),
            'progressEvent': true,
            'fields': [
                {
                    'field': 'Pages',
                    'key': 'UID',
                    'value': 'Name',
                    'uri': '/admin/advertisementpage',
                    'target': 'ListAll'
                },
                {
                    'field': 'Locations',
                    'key': 'UID',
                    'value': 'Name',
                    'uri': '/admin/advertisementlocation',
                    'target': 'ListAll'
                }
            ]
        });

        advertisementView.getObserverObject().setListSource(advertisementView);

        var licenseView = new EditView({
            'uri': '/admin/licenseinfo',
            'observer': new ObjectObserver({ 'contentType': new LicenseInfo({}), 'messages': intialize(new MessageRepository()) })
        });

        var productsView = new CRUDView({
            'uri': '/admin/product',
            'observer': new CRUDObserver({ 'contentType': new Product({}), 'messages': intialize(new MessageRepository()) }),
            'progressEvent': true,
            'fields': [
                {
                    'field': 'CategoriesList',
                    'key': 'Name',
                    'value': 'Name',
                    'uri': '/admin/category',
                    'target': 'ListAll'
                },
                {
                    'field': 'ManufacturersList',
                    'key': 'Name',
                    'value': 'Name',
                    'uri': '/admin/manufacturer',
                    'target': 'ListAll'
                },
                {
                    'field': 'UnitsList',
                    'key': 'Name',
                    'value': 'Name',
                    'uri': '/admin/unit',
                    'target': 'ListAll'
                },
                {
                    'field': 'ColorsList',
                    'key': 'Name',
                    'value': 'Name',
                    'uri': '/admin/color',
                    'target': 'ListAll'
                }
            ]
        });

        productsView.getObserverObject().delete = function (data) {

            if (confirm("@SharedLibrary.Resources.Global.StandardMessages.AlertSure")) {

                productsView.delete({ content: data });
            }
        };

        productsView.getObserverObject().setFeature = function (id) {

            $("#__form_feature").dialog("open");

            featureView.setObjectKey(id);
            featureView.setKeyField("ProductID");
            featureView.getObserverObject().resetForm();

        };

        productsView.getObserverObject().findFeatures = function (id) {

            $("#__grid_features").dialog("open");

            featureView.setObjectKey(id);
            featureView.setKeyField("ProductID");
            featureView.find(1);
        };

        productsView.getObserverObject().setReference = function (id, code, name) {

            $("#__form_reference").dialog("open");

            referenceView.setObjectKey(id);
            referenceView.setKeyField("ReferenceID");
            referenceView.getObserverObject().resetForm({ form: '__uploadform_references' } );

        };

        productsView.getObserverObject().findReference = function (id, code, name) {

            $("#__grid_reference").dialog("open");

            referenceView.setObjectKey(id);
            referenceView.setKeyField("ReferenceID");
            referenceView.find(1);
        };

        productsView.getObserverObject().setAdvertisement = function (id) {

            $("#__form_advertisement").dialog("open");

            advertisementView.setObjectKey(id);
            advertisementView.setKeyField("ReferenceID");
            advertisementView.getObserverObject().resetForm({ form: '__uploadform_advertisement' });

        };

        productsView.getObserverObject().findAdvertisement = function (id) {

            $("#__grid_advertisement").dialog("open");

            advertisementView.setObjectKey(id);
            advertisementView.setKeyField("ReferenceID");
            advertisementView.find(1);
        };

        productsView.getObserverObject().setLicenseCode = function (id) {

            $("#__form_license").dialog("open");

            licenseView.setObjectKey(id);
            licenseView.setKeyField("ProductID");
            licenseView.getObserverObject().resetForm({ view: licenseView});

            licenseView.get();
        };

        productsView.getObserverObject().setListSource(productsView);

        $(function () {

            try {
                ko.applyBindings(productsView.getObserverObject(), document.getElementById("products"));
                productsView.load();
            }
            catch (e) {
            }

            try {
                ko.applyBindings(featureView.getObserverObject(), document.getElementById("features"));
            }
            catch (e) { }

            try {
                ko.applyBindings(referenceView.getObserverObject(), document.getElementById("references"));
            }
            catch (e) { }

            try {
                ko.applyBindings(advertisementView.getObserverObject(), document.getElementById("advertisements"));

                advertisementView.LoadFields();
            }
            catch (e) {
            }

            try {
                ko.applyBindings(licenseView.getObserverObject(), document.getElementById("license"));
            }
            catch (e) {
            }

            $('#__form').dialog({ autoOpen: false, width: "auto", maxWidth: 1000 });
            $('#__form_feature').dialog({ autoOpen: false, width: "auto", maxWidth: 1000 });
            $('#__form_reference').dialog({ autoOpen: false, width: "auto", maxWidth: 1000 });
            $('#__form_advertisement').dialog({ autoOpen: false, width: "auto", maxWidth: 1000 });
            $('#__form_advertisement_image').dialog({ autoOpen: false, width: "auto", maxWidth: 1000 });
            $('#__form_advertisement_video').dialog({ autoOpen: false, width: "auto", maxWidth: 1000 });
            $('#__form_license').dialog({ autoOpen: false, width: "auto", maxWidth: 1000 });

            $('#__grid_features').dialog({ autoOpen: false, width: "auto", maxWidth: 1000, height: 600 });
            $('#__grid_reference').dialog({ autoOpen: false, width: "auto", maxWidth: 1000, height: 600 });
            $('#__grid_advertisement').dialog({ autoOpen: false, width: "auto", maxWidth: 1000, height: 600 });
        });

    </script>
}

