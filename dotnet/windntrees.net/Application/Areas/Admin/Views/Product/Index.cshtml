@section Header
{
    <title>@LocaleResources.Views.Product.Index.Page </title>

    <!-- Product View Section -->

    <script type="text/html" id="headings">
        <tr>
            <th class="col-1 order-0" scope="col">
            </th>
            <th class="col-1 order-1" scope="col">
            </th>
            <th class="col-1 order-2" scope="col">
            </th>
            <th class="col-1 order-3" scope="col">
            </th>
            <th class="col-1 order-4" scope="col">
            </th>
            <th class="col-1 order-5" scope="col">
            </th>
            <th class="col-1 order-6" scope="col">
            </th>
            <th class="col-1 order-7" scope="col">
            </th>
            <th class="col-1 order-8" scope="col">
            </th>
            <th class="col-1 order-9" scope="col">
            </th>
            <th class="col-1 order-10" scope="col">
            </th>
            <th class="col-1 order-11" scope="col">
            </th>
        </tr>
    </script>

    <script type="text/html" id="rows">
        <tr>
            <td colspan="12"><h4><span class="d-flex align-content-start" data-bind="text: Name()"></span></h4></td>
        </tr>
        <tr>
            <td class="d-flex align-content-start">@LocaleResources.Contents.Product.Product.Version:</td>
            <td><span class="d-flex align-content-start" data-bind="text: Version()"></span></td>
            <td class="d-flex align-content-start">@LocaleResources.Contents.Product.Product.ProductYear:</td>
            <td><span class="d-flex align-content-start" data-bind="text: ProductYear()"></span></td>            
            <td class="d-flex align-content-start">@LocaleResources.Contents.Product.Product.Code:</td>
            <td><span class="d-flex align-content-start" data-bind="text: Code()"></span></td>
            <td class="d-flex align-content-start">@LocaleResources.Contents.Product.Product.LegalCode:</td>
            <td><span class="d-flex align-content-start" data-bind="text: LegalCode()"></span></td>
            <td colspan="4" rowspan="3">
                <span class="d-flex align-content-start"><a href="#" data-bind="click: function(data, event) { $parent.resetFormForEditing($index); }" data-toggle="modal" data-target="#__form_picture"><img class="img-fluid d-block m-auto" data-bind="attr: { src: PictureLink() }" /></a></span>
            </td>
        </tr>
        <tr>
            <td class="d-flex align-content-start">@LocaleResources.Contents.Product.Product.Unit:</td>
            <td><span class="d-flex align-content-start" data-bind="text: Unit()"></span></td>
            <td class="d-flex align-content-start">@LocaleResources.Contents.Product.Product.Color:</td>
            <td><span class="d-flex align-content-start" data-bind="text: Color()"></span></td>
            <td class="d-flex align-content-start">@LocaleResources.Contents.Product.Product.Category:</td>
            <td><span class="d-flex align-content-start" data-bind="text: Category()"></span></td>
            <td class="d-flex align-content-start">@LocaleResources.Contents.Product.Product.Manufacturer:</td>
            <td><span class="d-flex align-content-start" data-bind="text: Manufacturer()"></span></td>
        </tr>
        <tr>
            <td class="scroll-y-100px" colspan="8">
                <span class="d-flex align-content-start" data-bind="text: Description()"></span>
            </td>
        </tr>
        <tr>
            <td colspan="12">
                <div class="hidden-phone visible-desktop action-buttons d-flex align-content-start">
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.setAdvertisement($data.UID); }" title="@LocaleResources.Views.Product.Index.AddAdvertisement"><i class="fa fa-edit text-success"></i>@LocaleResources.Views.Product.Index.AddAdvertisement</a>
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.findAdvertisement($data.UID); }" title="@LocaleResources.Views.Product.Index.ViewAdvertisements"><i class="fa fa-edit text-success"></i>@LocaleResources.Views.Product.Index.ViewAdvertisements</a>
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.setReference($data.UID); }" title="@LocaleResources.Views.Company.Index.AddReference"><i class="fa fa-edit text-success"></i>@LocaleResources.Views.Company.Index.AddReference</a>
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.findReference($data.UID); }" title="@LocaleResources.Views.Company.Index.ViewReferences"><i class="fa fa-edit text-success"></i>@LocaleResources.Views.Company.Index.ViewReferences</a>
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.setFeature($data.UID); }" title="@LocaleResources.Views.Product.Index.AddFeature"><i class="fa fa-edit text-success"></i>@LocaleResources.Views.Product.Index.AddFeature</a>
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.findFeatures($data.UID); }" title="@LocaleResources.Views.Product.Index.ViewFeatures"><i class="fa fa-edit text-success"></i>@LocaleResources.Views.Product.Index.ViewFeatures</a>
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.setLicenseCode($data.UID); }" title="@LocaleResources.Views.Product.Index.LicenseCode"><i class="fa fa-edit text-success"></i>@LocaleResources.Views.Product.Index.LicenseCode</a>
                </div>
                <div class="hidden-phone visible-desktop action-buttons d-flex align-content-end">
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.resetFormForEditing($index); $('#__form').dialog('open'); }" title="@SharedLibrary.Resources.Global.FormMessages.EditD"><i class="fa fa-edit text-success"></i>@SharedLibrary.Resources.Global.FormMessages.Edit</a>
                    <a class="red" href="#" data-bind="click: function(data, event) { $parent.delete($data); }" title="@SharedLibrary.Resources.Global.FormMessages.DeleteD"><i class="fa fa-times text-danger"></i>@SharedLibrary.Resources.Global.FormMessages.Delete</a>
                </div>
            </td>
        </tr>
        <tr>
            <td colspan="12"></td>
        </tr>
    </script>

    <script type="text/html" id="formcontent">
        <form id="__uploadform">
            <div class="form-group form-row">
                <div class="col-12">
                    <label class="control-label d-flex align-content-start" for="Name">
                        @LocaleResources.Contents.Product.Product.Name
                    </label>
                    <input data-bind="value: $root.EditMode() ? Name : Name" id="Name" name="Name" type="text" title="@LocaleResources.Contents.Product.Product.Name"
                           maxlength="100" placeholder="" class="form-control col-12" /><span class="error"
                                                                                       data-bind="validationMessage: Name"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div class="col-3 order-0">
                    <label class="control-label d-flex align-content-start" for="Code">
                        @LocaleResources.Contents.Product.Product.Code
                    </label>
                    <input data-bind="value: $root.EditMode() ? Code : Code" id="Code" name="Code" type="text" title="@LocaleResources.Contents.Product.Product.Code"
                           maxlength="100" placeholder="" class="form-control col-12" /><span class="error"
                                                                                       data-bind="validationMessage: Code"></span>
                </div>
                <div class="col-3 order-1">
                    <label class="control-label d-flex align-content-start" for="LegalCode">
                        @LocaleResources.Contents.Product.Product.LegalCode
                    </label>
                    <input data-bind="value: $root.EditMode() ? LegalCode : LegalCode" id="LegalCode" name="LegalCode" type="text" title="@LocaleResources.Contents.Product.Product.LegalCode"
                           maxlength="100" placeholder="" class="form-control col-12" /><span class="error"
                                                                                       data-bind="validationMessage: LegalCode"></span>
                </div>
                <div class="col-3 order-2">
                    <label class="control-label d-flex align-content-start" for="ProductYear">
                        @LocaleResources.Contents.Product.Product.ProductYear
                    </label>
                    <input data-bind="value: $root.EditMode() ? ProductYear : ProductYear" id="ProductYear" name="ProductYear" type="text" title="@LocaleResources.Contents.Product.Product.ProductYear"
                           maxlength="100" placeholder="" class="form-control col-12" /><span class="error"
                                                                                       data-bind="validationMessage: ProductYear"></span>
                </div>
                <div class="col-3 order-3">
                    <label class="control-label d-flex align-content-start" for="Version">
                        @LocaleResources.Contents.Product.Product.Version
                    </label>
                    <input data-bind="value: $root.EditMode() ? Version : Version" id="Version" name="Version" type="text" title="@LocaleResources.Contents.Product.Product.Version"
                           maxlength="100" placeholder="" class="form-control col-12" /><span class="error"
                                                                                       data-bind="validationMessage: Version"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div class="col-12">
                    <label class="control-label d-flex align-content-start" for="Description">
                        @LocaleResources.Contents.Product.Product.Description
                    </label>
                    <textarea data-bind="value: $root.EditMode() ? Description : Description" class="form-control col-12" title="@LocaleResources.Contents.Product.Product.Description"
                              id="Description" name="Description" maxlength="1024" rows="3" placeholder=""></textarea><span class="error" data-bind="validationMessage: Description"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div class="col-3 order-0">
                    <label class="control-label d-flex align-content-start" for="Manufacturer">
                        @LocaleResources.Contents.Product.Product.Manufacturer
                    </label>
                    <select data-bind="options: $root.ManufacturersList, optionsText: 'val', optionsValue: 'val', value: $root.EditMode() ? Manufacturer : Manufacturer, optionsCaption: '@SharedLibrary.Resources.Global.FormMessages.Select'" title="@LocaleResources.Contents.Product.Product.Manufacturer"
                            id="Manufacturer" name="Manufacturer" class="form-control col-12"></select><span class="error" data-bind="validationMessage: Manufacturer"></span>

                </div>
                <div class="col-3 order-1">
                    <label class="control-label d-flex align-content-start" for="Category">
                        @LocaleResources.Contents.Product.Product.Category
                    </label>
                    <select data-bind="options: $root.CategoriesList, optionsText: 'val', optionsValue: 'val', value: $root.EditMode() ? Category : Category, optionsCaption: '@SharedLibrary.Resources.Global.FormMessages.Select'" title="@LocaleResources.Contents.Product.Product.Category"
                            id="Category" name="Category" class="form-control col-12"></select><span class="error" data-bind="validationMessage: Category"></span>
                </div>
                <div class="col-3 order-2">
                    <label class="control-label d-flex align-content-start" for="Unit">
                        @LocaleResources.Contents.Product.Product.Unit
                    </label>
                    <select data-bind="options: $root.UnitsList, optionsText: 'val', optionsValue: 'val', value: $root.EditMode() ? Unit : Unit, optionsCaption: '@SharedLibrary.Resources.Global.FormMessages.Select'" title="@LocaleResources.Contents.Product.Product.Unit"
                            id="Unit" name="Unit" class="form-control col-12"></select><span class="error" data-bind="validationMessage: Unit"></span>
                </div>
                <div class="col-3 order-3">
                    <label class="control-label d-flex align-content-start" for="Color">
                        @LocaleResources.Contents.Product.Product.Color
                    </label>
                    <select data-bind="options: $root.ColorsList, optionsText: 'val', optionsValue: 'val', value: $root.EditMode() ? Color : Color, optionsCaption: '@SharedLibrary.Resources.Global.FormMessages.Select'" title="@LocaleResources.Contents.Product.Product.Color"
                            id="Color" name="Color" class="form-control col-12"></select><span class="error" data-bind="validationMessage: Color"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div class="col-12">
                    <label class="control-label d-flex align-content-start" for="upload">
                        @SharedLibrary.Resources.Global.FormMessages.Upload
                    </label>
                    <input class="form-control col-12" id="upload" name="upload" type="file" />
                    
                    <input id="recordid" name="recordid" type="hidden" data-bind="value: $data.getKey()" />
                    <input id="uploadType" name="uploadType" type="hidden" value="product" />
                    
                </div>
            </div>
            <div class="form-group form-row">
                <div class="col-4 order-0">
                    <label class="control-label d-flex align-content-start" for="">
                        @LocaleResources.Contents.Product.Product.Service
                    </label>
                    <input data-bind="checked: $root.EditMode() ? Service : Service" id="Service" name="Service" title="@LocaleResources.Contents.Product.Product.Service"
                           type="checkbox" class="form-control form-check" /><span class="error" data-bind="validationMessage: Service"></span>
                </div>
            </div>
            <input id="UID" name="UID" type="hidden" data-bind="value: UID" />
            <input id="Picture" name="Picture" type="hidden" data-bind="value: Picture" />
        </form>
        <div class="clear-fix">
        </div>
    </script>

    <script type="text/html" id="viewimage">
        <img class="img-fluid d-block m-auto" data-bind="attr:{src: $data.PictureLink() }" />
    </script>

    <!-- Product View Section - END -->


    <!-- Features Referential View Section -->

    <script type="text/html" id="headings_features">
        <tr>
            <th class="col-4 order-0" scope="col">
                <span class="d-flex align-content-start" title="@LocaleResources.Contents.Product.ProductFeature.Name">@LocaleResources.Contents.Product.ProductFeature.Name</span>
            </th>
            <th class="col-6 order-1" scope="col">
                <span class="d-flex align-content-start" title="@LocaleResources.Contents.Reference.Description">@LocaleResources.Contents.Product.ProductFeature.Description</span>
            </th>
            <th class="col-2 order-2" scope="col">&nbsp;</th>
        </tr>
    </script>

    <script type="text/html" id="rows_features">
        <tr>
            <td><span class="d-flex align-content-start" data-bind="text: Name()"></span></td>
            <td><span class="d-flex align-content-start" data-bind="text: Description()"></span> </td>
            <td>
                <div class="hidden-phone visible-desktop action-buttons d-flex align-content-start">
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.resetFormForEditing($index); $parent.dispalyFeatureForm(); }" title="@SharedLibrary.Resources.Global.FormMessages.EditD"><i class="fa fa-edit text-success"></i>@SharedLibrary.Resources.Global.FormMessages.Edit</a>
                    <a class="red" href="#" data-bind="click: function(data, event) { $parent.delete($data); }" title="@SharedLibrary.Resources.Global.FormMessages.DeleteD"><i class="fa fa-times text-danger"></i>@SharedLibrary.Resources.Global.FormMessages.Delete</a>
                </div>
            </td>
        </tr>
    </script>

    <script type="text/html" id="formcontent_features">
        <div class="form-group form-row">
            <div class="col-12">
                <label class="control-label d-flex align-content-start" for="Name">
                    @LocaleResources.Contents.Reference.Name
                </label>
                <input data-bind="value: $root.EditMode() ? Name : Name" id="Name" name="Name" type="text" title="@LocaleResources.Contents.Reference.Name"
                       maxlength="100" placeholder="" class="form-control col-12" /><span class="error"
                                                                                   data-bind="validationMessage: Name"></span>
            </div>
        </div>
        <div class="form-group form-row">
            <div class="col-12">
                <label class="control-label d-flex align-content-start" for="Description">
                    @LocaleResources.Contents.Reference.Description
                </label>
                <textarea data-bind="value: $root.EditMode() ? Description : Description" class="form-control col-12" title="@LocaleResources.Contents.Reference.Description"
                          id="Description" name="Description" maxlength="1024" rows="3" placeholder=""></textarea><span class="error" data-bind="validationMessage: Description"></span>
            </div>
        </div>
        <div class="clear-fix">
        </div>
    </script>

    <!-- Features Referential View Section - END -->


    <!-- References Referential View Section -->

    <script type="text/html" id="headings_references">
        <tr>
            <th class="col-2 order-0" scope="col">
                <span class="d-flex align-content-start" title="@LocaleResources.Contents.Reference.Name">@LocaleResources.Contents.Reference.Name</span>
            </th>
            <th class="col-4 order-1" scope="col">
                <span class="d-flex align-content-start" title="@LocaleResources.Contents.Reference.Description">@LocaleResources.Contents.Reference.Description</span>
            </th>
            <th class="col-2 order-2" scope="col">
                <span class="d-flex align-content-start" title="@LocaleResources.Contents.Reference.ContentFile">@LocaleResources.Contents.Reference.ContentFile</span>
            </th>
            <th class="col-2 order-3" scope="col"></th>
            <th class="col-2 order-4" scope="col">&nbsp;</th>
        </tr>
    </script>

    <script type="text/html" id="rows_references">
        <tr>
            <td><span class="d-flex align-content-start" data-bind="text: Name()"></span></td>
            <td><span class="d-flex align-content-start" data-bind="text: Description()"></span></td>
            <td><span class="d-flex align-content-start" data-bind="text: ContentFile()"></span></td>
            <td><p class="paragraph-normal-text d-flex align-content-start">@LocaleResources.Contents.Reference.Readable <input data-bind="checked: Readable(), disable: true" type="checkbox" /> @LocaleResources.Contents.Reference.Picture <input data-bind="checked: Picture(), disable: true" type="checkbox" /> @LocaleResources.Contents.Reference.AudioVideo <input data-bind="checked: AudioVideo(), disable: true" type="checkbox" /> @LocaleResources.Contents.Reference.Download <input data-bind="checked: Download(), disable: true" type="checkbox" /></p></td>
            <td>
                <div class="hidden-phone visible-desktop action-buttons d-flex align-content-start">
                    <a class="green" href="#" data-bind="attr: { href: DownloadLink() }" title="@SharedLibrary.Resources.Global.FormMessages.DownloadD"><i class="fa fa-edit text-success"></i>@SharedLibrary.Resources.Global.FormMessages.Download</a>
                    <a class="green" href="#" data-bind="click: function(data, event) { $parent.resetFormForEditing($index); $parent.dispalyReferenceForm(); }" title="@SharedLibrary.Resources.Global.FormMessages.EditD"><i class="fa fa-edit text-success"></i>@SharedLibrary.Resources.Global.FormMessages.Edit</a>
                    <a class="red" href="#" data-bind="click: function(data, event) { $parent.delete($data); }" title="@SharedLibrary.Resources.Global.FormMessages.DeleteD"><i class="fa fa-times text-danger"></i>@SharedLibrary.Resources.Global.FormMessages.Delete</a>
                </div>
            </td>
        </tr>       
    </script>

    <script type="text/html" id="formcontent_references">
        <form id="__uploadform_references">
            <div class="form-group form-row">
                <div class="col-12">
                    <label class="control-label d-flex align-content-start" for="Name">
                        @LocaleResources.Contents.Reference.Name
                    </label>
                    <input class="form-control col-12" data-bind="value: $root.EditMode() ? Name : Name" id="Name" name="Name" type="text" title="@LocaleResources.Contents.Reference.Name"
                           maxlength="100" placeholder="" /><span class="error"
                                                                  data-bind="validationMessage: Name"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div class="col-12">
                    <label class="control-label d-flex align-content-start" for="Description">
                        @LocaleResources.Contents.Reference.Description
                    </label>
                    <textarea data-bind="value: $root.EditMode() ? Description : Description" class="form-control col-12" title="@LocaleResources.Contents.Reference.Description"
                              id="Description" name="Description" maxlength="1024" rows="3" placeholder=""></textarea><span class="error" data-bind="validationMessage: Description"></span>
                </div>
            </div>
            <div class="form-group form-row">
                <div class="col-12">
                    <label class="control-label d-flex align-content-start" for="upload">
                        @SharedLibrary.Resources.Global.FormMessages.Upload
                    </label>
                    <div class="input-group d-flex align-content-start">
                        <select class="col-2 form-control order-first" id="uploadType" name="uploadType">
                            <option value="readable" selected>readable</option>
                            <option value="image">image</option>
                            <option value="video">video</option>
                        </select>
                        <input class="col-10 form-control form-control-file order-last" id="upload" name="upload" type="file" />
                    </div>
                    <input id="recordid" name="recordid" type="hidden" data-bind="value: $data.getKey()" />
                </div>
            </div>
            <div class="form-group form-row">
                <div class="col-4 order-0">
                    <label class="control-label d-flex align-content-start" for="">
                        @LocaleResources.Contents.Reference.Download
                    </label>
                    <input class="form-check d-flex align-content-start" data-bind="checked: $root.EditMode() ? Download : Download" id="Download" name="Download" title="@LocaleResources.Contents.Reference.Download"
                           type="checkbox" /><span class="error" data-bind="validationMessage: Download"></span>
                </div>
            </div>

            <input id="UID" name="UID" type="hidden" data-bind="value: UID" />
            <input id="ReferenceID" name="ReferenceID" type="hidden" data-bind="value: ReferenceID" />
            <input id="ContentFile" name="ContentFile" type="hidden" data-bind="value: ContentFile" />
            <input id="Size" name="Size" type="hidden" data-bind="value: ((Size === null || Size === undefined) ? 0 : Size)" />
            <input id="Readable" name="Readable" type="hidden" data-bind="value: Readable" />
            <input id="Picture" name="Picture" type="hidden" data-bind="value: Picture" />
            <input id="AudioVideo" name="AudioVideo" type="hidden" data-bind="value: AudioVideo" />
        </form>
        <div class="clear-fix">
        </div>
    </script>

    <!-- References Referential View Section - END -->


    <!-- License Referential View Section -->

    <script type="text/html" id="formcontent_license">
        <div class="form-group form-row">
            <div class="col-12">
                <label class="control-label d-flex align-content-start" for="Code">
                    @LocaleResources.Contents.Product.LicenseInfo.Code
                </label>
                <textarea data-bind="value: Code" class="form-control col-12" title="@LocaleResources.Contents.Product.LicenseInfo.Code"
                          id="Code" name="Code" maxlength="1024" rows="5" placeholder=""></textarea><span class="error" data-bind="validationMessage: Code"></span>
            </div>
        </div>
        <div class="clear-fix">
        </div>
    </script>

    <script type="text/html" id="formcontent_actions">
        <div class="form-group form-row d-flex align-content-center" >
            <button type="button" onclick="javascript: $('#__form_license').dialog('close');" id="btnCloseAddForm" class="_mdpullleft btn btn-default"><span>@SharedLibrary.Resources.Global.FormMessages.Close</span></button>
            <button type="button" data-bind="click: function(data,event) { update(); }" title="@SharedLibrary.Resources.Global.FormMessages.Save" id="btnAddEditUser" class="btn btn-primary">@SharedLibrary.Resources.Global.FormMessages.Save</button>
        </div>
    </script>

    <!-- License Referential View Section - END -->


    <!-- Advertisement Referential View Section -->

    <script type="text/html" id="headings_advertisement">
        <tr>
            <th class="col-8" scope="col">
                <span class="d-flex align-content-start" title="@LocaleResources.Contents.Advertisement.Heading">@LocaleResources.Contents.Advertisement.Heading</span>
            </th>
            <th class="col-4" scope="col">
                <span class="d-flex align-content-start">
                    <span title="@LocaleResources.Contents.Advertisement.Picture">@LocaleResources.Contents.Advertisement.Picture</span>, <span title="@LocaleResources.Contents.Advertisement.Video">@LocaleResources.Contents.Advertisement.Video</span>
                </span>
            </th>
        </tr>
    </script>

    <script type="text/html" id="rows_advertisement">
        <tr>
            <td>
                <h3><span class="d-flex align-content-start" data-bind="text: Heading()"></span> </h3>
                <h4><span class="d-flex align-content-start" data-bind="html: SubHeading()"></span> </h4>
                <p class="paragraph-normal-text d-flex align-content-start" data-bind="html: Detail()"></p>
                <p class="paragraph-normal-text d-flex align-content-start">
                    <span class="form-label">@LocaleResources.Contents.Advertisement.Page: <span class="field-value" data-bind="text: Page()"></span></span>,
                    <span class="form-label">@LocaleResources.Contents.Advertisement.Location: <span class="field-value" data-bind="text: Location()"></span></span>,
                    <span class="form-label">@LocaleResources.Contents.Advertisement.SortOrder: <span class="field-value" data-bind="text: SortOrder()"></span></span>

                </p>
                <p class="paragraph-normal-text d-flex align-content-start">
                    <span class="form-label">@LocaleResources.Contents.Advertisement.Source: <span class="field-value" data-bind="text: Source()"></span></span>,
                    <span class="form-label">@LocaleResources.Contents.Advertisement.News: <span class="field-value" data-bind="text: News()"></span></span>,
                    <span class="form-label">@LocaleResources.Contents.Advertisement.Enabled: <span class="field-value" data-bind="text: Enabled()"></span></span>
                </p>
                <p class="paragraph-normal-text d-flex align-content-start">
                    <a class="form-link-small" href="#" data-bind="attr: { href: Link1() } ">@LocaleResources.Contents.Advertisement.Link1</a>
                    <a class="form-link-small" href="#" data-bind="attr: { href: Link2() } ">@LocaleResources.Contents.Advertisement.Link2</a>
                </p>
            </td>
